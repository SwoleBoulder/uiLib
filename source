--[[

	ui

]]

local release = "Beta 0.0"
local notifDuration = 5

-- Services

local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local HttpService = game:GetService("HttpService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

-- Variables

local globalTweenInfo = TweenInfo.new(.5, Enum.EasingStyle.Quint)

-- Object Variables

local camera = workspace.CurrentCamera

-- ui Management

local Library = {
	Flags = {},
	Themes = {
		Default = {}
	},
	currentTheme = "Default",
	uiFolder = nil,
	saveConfig = false
}

local icons = {}

local success, response = pcall(function()
	icons = HttpService:JSONDecode(game:HttpGetAsync("https://raw.githubusercontent.com/evoincorp/lucideblox/master/src/modules/util/icons.json")).icons
end)

if not success then
	warn("\nuiLib - Failed to load Icons. Error code: " .. response .. "\n")
end

local function GetIcon(iconName)
	if icons[iconName] ~= nil then
		return icons[iconName]
	else
		return nil
	end
end

local ui = Instance.new("ScreenGui")
ui.Name = "ui"

if gethui then
	ui.Parent = gethui()
elseif syn.protect_gui then
	syn.protect_gui(ui)
	ui.Parent = CoreGui
elseif CoreGui:FindFirstChild("RobloxGui") then
	ui.Parent = CoreGui:FindFirstChild("RobloxGui")
else
	ui.Parent = CoreGui
end

if gethui then
	for _, GUI in ipairs(gethui():GetChildren()) do
		if GUI.Name == ui.Name and GUI ~= ui then
			GUI:Destroy()
		end
	end
else
	for _, GUI in ipairs(CoreGui:GetChildren()) do
		if GUI.Name == ui.Name and GUI ~= ui then
			GUI:Destroy()
		end
	end
end

